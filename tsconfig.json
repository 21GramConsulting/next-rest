{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "#*": [
        "./next-rest/*"
      ],
      "!unit/*": [
        "./test/unit/*"
      ],
      "!component/*": [
        "./test/component/*"
      ],
      "!integration/*": [
        "./test/integration/*"
      ],
      "!system/*": [
        "./test/system/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "./lib/",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": [
    "next-rest/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "docs",
    "coverage"
  ],
  "typedocOptions": {
    "name": "Next.js REST Utilities",
    "includeVersion": true,
    "entryPoints": "./next-rest/index.ts",
    "entryPointStrategy": "Expand",
    "out": "docs",
    "disableSources": true,
    "readme": "./next-rest/SUMMARY.md",
    "searchInComments": true,
    "navigationLinks": {
      "21Gram Consulting": "https://www.21gram.consulting",
      "GitHub": "https://github.com/21GramConsulting/next-rest",
    }
  }
}